# Production Environment Variables
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=production

# Database
DATABASE_URL=postgresql://username:password@postgres:5432/database_name
POSTGRES_DB=kyzmet
POSTGRES_USER=kyzmet
POSTGRES_PASSWORD=your-strong-password-here

# JWT
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# Firebase (for push notifications and Firebase Auth)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Server
PORT=6969

# Optional: SMS Provider (replace with real provider in production)
# SMS_PROVIDER_API_KEY=your-sms-provider-key
# SMS_PROVIDER_URL=https://api.your-sms-provider.com